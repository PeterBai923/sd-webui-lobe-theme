{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["javascript"],

  "include": ["src", "typings", "**/*.ts", "**/*.d.ts", "**/*.tsx", "vite.config.ts"]
}
